# rild.te

allow rild {
    cass
    hal_camera_default
    hal_secure_element_default
}:dir search;

allow rild {
    cass
    hal_camera_default
    hal_secure_element_default
}:file r_file_perms;

allow rild imei_efs_file:file { setattr w_file_perms };
allow rild app_efs_file:dir { search write };
allow rild app_efs_file:file { create_file_perms };
allow rild log_vendor_data_file:dir create_dir_perms;
allow rild log_vendor_data_file:file create_file_perms;

get_prop(rild, product_ship_prop)
get_prop(rild, oneui_version_prop)
set_prop(rild, vendor_radio_prop)
set_prop(rild, radio_prop)

dontaudit rild system_prop:file read;
allow rild rild:unix_stream_socket connectto;
allow rild self:capability { chown };
